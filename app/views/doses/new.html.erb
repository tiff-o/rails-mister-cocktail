<div class="container">
  <h1>add a new dose</h1>

  <%= simple_form_for [@cocktail, @dose] do |f|%>
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.button :submit, value: 'add', class: 'btn btn-primary' %>
  <% end %>
  <%= link_to 'cancel', cocktails_path %>

</div>
